@page
@model FinalProject.Pages.EditCommentModel

@{
    ViewData["Title"] = "Edit comment";
}


<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Comment.ID" />
            <div class="form-group">
                <label asp-for="Comment.PostId" class="control-label"></label>
                <select asp-for="Comment.PostId" class="form-control" asp-items="ViewBag.PostId"></select>
                <span asp-validation-for="Comment.PostId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Comment.Body" class="control-label"></label>
                <input asp-for="Comment.Body" class="form-control" />
                <span asp-validation-for="Comment.Body" class="text-danger"></span>
            </div>
            <br >
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to Blogs</a>
</div>
