@page
@model FinalProject.Pages.AddTopicModel
@{
}

<div class="col-md-4"><h1>Topic Settings</h1></div>

<br>
<br>

<div class="col-md-12 col-sm-12 mx-auto mb-5">
    <form method="post">
        <div class="mb-3 row">
            <div class="col-sm-4 text-sm-end align-self-center">
                <label class="form-label" asp-for="NewTopic.Title"></label>
            </div>
            <div class="col">
                <input class="form-control" asp-for="NewTopic.Title" />
                <span class="form-text" asp-validation-for="NewTopic.Title"></span>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-4 text-sm-end align-self-center">
            </div>
            <div class="col-8">
                <button type="submit" class="btn btn-outline-primary">Add Topic</button>
            </div>
        </div>
    </form>
</div>

@section scripts{
    <partial name="_ValidationScriptsPartial" />
}