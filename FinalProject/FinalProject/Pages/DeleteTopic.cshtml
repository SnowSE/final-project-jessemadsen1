@page
@model FinalProject.Pages.DeleteTopicModel
@{
}

<div class="col-md-12 col-sm-12 mx-auto mb-5">
    <form method="post">
        <input type="hidden" asp-for="Topic.ID" />
        <div class="col-md-8">
            <h3>Are you sure you want to delete this Topic?</h3>
            <br>
            <h2>
                @Model.Topic.Title
            </h2>
            <p><em>@Html.DisplayFor(modelItem => Model.Topic.Body)</em></p>
            <br>
            <hr />
        </div>
        <div class="row">
            <div class="col-md-6 col-sm-12  mb-5">
                <button type="submit" class="btn btn-outline-danger btn-sm">Delete</button>
                <a asp-page="./Index">
                    <input type="button" class="btn btn-outline-secondary btn-sm" value="Cancel" />
                </a>
            </div>
        </div>
    </form>
</div>

@section scripts{
    <partial name="_ValidationScriptsPartial" />
}
