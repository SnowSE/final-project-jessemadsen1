@model FinalProject.Pages.AddAuthorModel



<h4>Author</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3 p-2 row">
                <div class="col-auto text-sm-end align-self-center">
                    <label class="form-label" asp-for="FormFile">Upload your avatar</label>
                </div>
                <div class="col">
                    <input class="form-control-file" asp-for="FormFile" type ="file">
                    <span class="form-text" asp-validation-for="FormFile"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Author.Body" class="control-label">Bio</label>
                <textarea class="form-control" asp-for="Author.Body" rows="5"></textarea>
                <span asp-validation-for="Author.Body" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col">
                    <br />
                    <input class="btn btn-outline-info" type="submit" value="Save" />
                </div>
            </div>
