@page
@model FinalProject.Pages.AddAuthorModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AddAuthor</title>
</head>
<body>

<h4>Author</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Author.Avatar" class="control-label"></label>
                <input asp-for="Author.Avatar" class="form-control" />
                <span asp-validation-for="Author.Avatar" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Author.Body" class="control-label"></label>
                <input asp-for="Author.Body" class="form-control" />
                <span asp-validation-for="Author.Body" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Author.UserName" class="control-label"></label>
                <input asp-for="Author.UserName" class="form-control" />
                <span asp-validation-for="Author.UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Author.VoteTotal" class="control-label"></label>
                <input asp-for="Author.VoteTotal" class="form-control" />
                <span asp-validation-for="Author.VoteTotal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
