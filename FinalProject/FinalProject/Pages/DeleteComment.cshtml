@page
@model FinalProject.Pages.Shared.DeleteCommentModel

@{
    ViewData["Title"] = "Delete Comment";
}

<title>DeleteComment</title>
<h3>Are you sure you want to delete this Comment?</h3>
<br>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Comment.Author)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Comment.Author)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Comment.Body)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Comment.Body)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Comment.PostedOn)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Comment.PostedOn)
        </dd>
    </dl>
    <form method="post">
        <input type="hidden" asp-for="Comment.ID" />
        <input type="submit" value="Delete" class="btn btn-outline-danger" />
    </form>
</div>

